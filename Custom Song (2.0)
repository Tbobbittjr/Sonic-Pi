use_bpm 110
use_synth :blade
with_fx :distortion do
end

define :drumheavy do
  live_loop :drum do
    sample :drum_heavy_kick
    sleep 1
    sample :drum_heavy_kick
    sleep 1
    sample :drum_heavy_kick
    sleep 0.5
    sample :drum_soft_kick
    sleep 1.5
    sample :drum_heavy_kick
    sleep 1
  end
end

define :hit_hat do
  live_loop :hithat do
    4.times do
      sample :drum_snare_soft
      sleep 1
    end
    2.times do
      sample :drum_snare_soft
      sleep 1
    end
    sample :drum_snare_soft
    sleep 1
    
    8.times do
      sample :drum_snare_soft
      sleep 1
    end
  end
end

define :beat1 do
  play :db3
  sleep 1
  play :f3
  sleep 1
  play :bb2
  sleep 1.5
  play :c3
  sleep 0.5
end
define :beat2 do
  play :gb2
  sleep 0.75
  play :bb2
  sleep 0.75
  play :eb3
  sleep 1
  play :f3
  sleep 0.75
  play :bb3
  sleep 0.75
end

#start of song

live_loop :GO do
  #m1
  beat1
  #m2
  beat2
end
sleep 4

#drum heavy
drumheavy

#hit hat
hit_hat
